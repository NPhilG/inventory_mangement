<%= form_with(model: menu_item, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div class="field">
    <%= form.select :items, options_for_select(item_select), {:include_blank => true}, { :multiple => true, :size => 5 } %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>